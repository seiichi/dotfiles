if [ -f /etc/bash_completion ]; then
  . /etc/bash_completion
fi

alias minicom='LANG=C minicom -w'

if [ -e /usr/bin/vimx ] ; then
  alias vim='LC_MESSAGES=en_US.utf8 vimx -v'
fi

# for gnome-terminal
if [ "x$TERM" == xxterm ]; then
  export TERM=xterm-256color
fi

if [ "x$HOSTNAME" == xtb303 ] ; then
  export DISPLAY=:0
fi

# vim: ft=sh
