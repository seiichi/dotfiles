if [ -f `brew --prefix`/etc/bash_completion ]; then
  . `brew --prefix`/etc/bash_completion
fi

PATH_DARWIN=/usr/local/bin:/usr/local/sbin

if [ -d `brew --prefix coreutils`/libexec/gnubin ]; then
  PATH_DARWIN="$(brew --prefix coreutils)/libexec/gnubin:$PATH_DARWIN"
fi

# gnu-tar
if [ -d `brew --prefix gnu-tar`/libexec/gnubin ]; then
  PATH_DARWIN="$(brew --prefix gnu-tar)/libexec/gnubin:$PATH_DARWIN"
fi

if [ "$TERM" != "dumb" ] ; then
  alias ls='gls --color=auto'
else
  alias ls='gls'
fi

# avoid "Too many open files" error of Python
ulimit -n 1024
