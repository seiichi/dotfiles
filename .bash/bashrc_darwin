# Reset PATH to keep it from being clobbered in tmux
# https://github.com/yyuu/pyenv/issues/85
if [ -x /usr/libexec/path_helper ]; then
    PATH=''
    source /etc/profile
fi

if [ -f `brew --prefix`/etc/bash_completion ]; then
  . `brew --prefix`/etc/bash_completion
fi

PATH_DARWIN=/usr/local/bin:/usr/local/sbin

if [ -d `brew --prefix coreutils`/libexec/gnubin ]; then
  PATH_DARWIN="$(brew --prefix coreutils)/libexec/gnubin:$PATH_DARWIN"
fi

# gnu-tar
if [ -d `brew --prefix gnu-tar`/libexec/gnubin ]; then
  PATH_DARWIN="$(brew --prefix gnu-tar)/libexec/gnubin:$PATH_DARWIN"
fi


if which asciidoc > /dev/null && [ -d /usr/local/etc/xml/catalog ]; then
  export XML_CATALOG_FILES=/usr/local/etc/xml/catalog
fi

if [ "$TERM" != "dumb" ] ; then
  alias ls='gls --color=auto'
else
  alias ls='gls'
fi
alias vim='mvim -v'
alias vimdiff='mvimdiff -v'
alias view='mview -v'
alias gvim='mvim'

# vim: ft=sh
